          img='https://blogs.iadb.org/conocimiento-abierto/wp-content/uploads/sites/10/2019/12/banner-lecciones-aprendidas-proyectos-desarrollo-2019.jpg'
          tecnologies={['React', 'Vue']}
        />
        <SlideProject
          title='This is my first project'
          description='  Lorem, ipsum dolor sit amet consectetur adipisicing elit. Minus, nulla!'
          img='https://blogs.iadb.org/conocimiento-abierto/wp-content/uploads/sites/10/2019/12/banner-lecciones-aprendidas-proyectos-desarrollo-2019.jpg'
          tecnologies={['React', 'Vue']}
        />
        <SlideProject
          title='This is my first project'
          description='  Lorem, ipsum dolor sit amet consectetur adipisicing elit. Minus, nulla!'
          img='https://blogs.iadb.org/conocimiento-abierto/wp-content/uploads/sites/10/2019/12/banner-lecciones-aprendidas-proyectos-desarrollo-2019.jpg'
          tecnologies={['React', 'Vue']}
        />
        <SlideProject
          title='This is my first project'
          description='  Lorem, ipsum dolor sit amet consectetur adipisicing elit. Minus, nulla!'
          img='https://blogs.iadb.org/conocimiento-abierto/wp-content/uploads/sites/10/2019/12/banner-lecciones-aprendidas-proyectos-desarrollo-2019.jpg'
          tecnologies={['React', 'Vue']}
        />

        <div class='swiper-slide hidden md:block'></div>
      </div>
    </div>
    <script>
      import Swiper, { Navigation, Pagination, EffectCoverflow, Autoplay } from 'swiper'
      import 'swiper/css/bundle'

      let SlideOptionModify = window.innerWidth > 768 ? 3 : 1

      const swiper = new Swiper('.swiper', {
        // Optional parameters
        modules: [Navigation, Autoplay, EffectCoverflow, Pagination],

        pagination: {
          el: '.swiper-pagination',
        },

        autoplay: {
          delay: 3500,
          disableOnInteraction: false,
        },

        effect: 'coverflow',
        coverflowEffect: {
          rotate: SlideOptionModify === 3 ? 50 : 0,
          stretch: 0,
          depth: 200,

          slideShadows: false,
        },

        scrollbar: {
          el: '.swiper-scrollbar',
        },

        slidesPerView: SlideOptionModify,
      })

      window.addEventListener('resize', () => {
        console.log(window.innerWidth)
        if (window.innerWidth > 768) {
          swiper.params.slidesPerView = 3
        } else {
          swiper.params.slidesPerView = 1
        }
      })
    </script>
  </div>
  <!-- Contact ME -->

  <div class='w-full my-10'>
    <h2
      class='text-3xl md:text-5xl md:text-left md:border-b-2 md:w-fit font-bold text-center text-transparent bg-clip-text bg-gradient-to-t from-primary to-secondary my-10'>
      Contact Me
    </h2>

    <div class='flex w-full'>
      <form
        id='form'
        class='flex flex-col justify-center px-8 flex-1 transition-all md:bg-white md:bg-opacity-10 md:rounded md:pt-2 md:shadow-inner md:hover:shadow-primary relative'>
        <div class='flex flex-col gap-y-2'>
          <label
            for='form__name'
            class='border-b-2 w-fit border-primary rounded-b-3xl text-lg'
            >Name</label
          >
          <input
            id='form__name'
            type='text'
            name='form__name'
            placeholder='Your Name'
            class='pl-4 py-2 transition rounded placeholder:text-secondary outline-none text-black focus:bg-slate-500 relative'
          />
        </div>
        <div class='flex flex-col gap-y-2'>
          <label
            for='form__email'
            class='border-b-2 w-fit border-primary rounded-b-3xl text-lg'
            >Email</label
          >
          <input
            id='form__email'
            type='email'
            name='form__email'
            placeholder='example@example.com'
            class='pl-4 py-2 transition rounded placeholder:text-secondary outline-none text-black focus:bg-slate-500'
          />
        </div>
        <div class='flex flex-col gap-y-2'>
          <label
            for='form__message'
            class='border-b-2 w-fit border-primary rounded-b-3xl text-lg'
            >Message</label
          >
          <textarea
            name='form__message'
            id='form__message'
            rows='4'
            placeholder="What's on your mind?"
            class='pl-4 py-2 transition rounded placeholder:text-secondary outline-none text-black focus:bg-slate-500'
          ></textarea>
        </div>
        <div class='md:flex md:justify-end'>
          <button
            type='submit'
            class='bg-secondary mx-auto md:mx-0 hover:bg-primary transition-all w-fit px-6 py-2 rounded cursor-pointer md:mt-10'
            >Send message</button
          >
        </div>
      </form>
      <lottie-player
        src='https://assets8.lottiefiles.com/packages/lf20_qxkLV7DHka.json'
        background='transparent'
        speed='0.85'
        autoplay
        loop
        class='hidden md:block md:flex-1 w-'
      ></lottie-player>
    </div>
  </div>
</Layout>

<style>
  .animation__pacman {
    transition: all 0.5s ease-in-out;
    position: relative;
    animation: pacman 5s ease-in infinite;
  }
  .animation__pacman:hover {
    transform: scale(1.2);
  }

  @keyframes pacman {
    0% {
      left: 0%;
      opacity: 1;
    }
    95%: {
      opacity: 1;
    }
    100% {
      left: 100%;
      opacity: 0;
    }
  }
</style>
