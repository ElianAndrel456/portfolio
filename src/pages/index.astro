---
import Layout from '../layouts/Layout.astro'
import Draw from '../icons/Draw.astro'
import RunIcon from '../icons/RunIcon.astro'
import ReadIcon from '../icons/ReadIcon.astro'
import GameIcon from '../icons/GameIcon.astro'
import MusicIcon from '../icons/MusicIcon.astro'
