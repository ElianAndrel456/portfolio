      </div>
      <div>
        <img src='https://img.icons8.com/color/80/null/vue-js.png' /><p class='text-center'>Vue</p>
      </div>
      <div>
        <img src='https://img.icons8.com/color/80/null/mongodb.png' /><p class='text-center'>
          Mongoose
        </p>
      </div>
      <div>
        <img src='https://img.icons8.com/color/80/null/firebase.png' /><p class='text-center'>
          Firebase
        </p>
      </div>
      <div>
        <img src='https://img.icons8.com/color/80/null/nodejs.png' /><p class='text-center'>Node</p>
      </div>
      <div>
        <img src='https://img.icons8.com/color/80/null/python--v1.png' /><p class='text-center'>
          Python
        </p>
      </div>
      <div>
        <img src='https://img.icons8.com/color/80/null/microsoft-sql-server.png' /><p
          class='text-center'>
          SQL Server
        </p>
      </div>
      <div class=''>
        <img src='https://img.icons8.com/officel/80/null/express-js.png' /><p class='text-center'>
          Express
        </p>
      </div>
    </div>
  </div>

  <!-- Proyects -->

  <div class='px-8'>
    <h2
      class='text-3xl md:text-5xl md:text-left md:border-b-2 md:w-fit font-bold text-center text-transparent bg-clip-text bg-gradient-to-t from-primary to-secondary my-10'>
      Projects
    </h2>
    <div class='swiper'>
      <!-- Additional required wrapper -->
      <div class='swiper-wrapper'>
        <!-- Slides -->
        <div class='swiper-slide hidden md:block'></div>

        <SlideProject
          title='This is my first project'
          description='  Lorem, ipsum dolor sit amet consectetur adipisicing elit. Minus, nulla!'
          img='https://blogs.iadb.org/conocimiento-abierto/wp-content/uploads/sites/10/2019/12/banner-lecciones-aprendidas-proyectos-desarrollo-2019.jpg'
          tecnologies={['React', 'Vue']}
        />
