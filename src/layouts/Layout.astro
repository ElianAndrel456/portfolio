---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import Particle from '../components/Particle.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    /><script src='https://kit.fontawesome.com/fa36b100b5.js' crossorigin='anonymous'></script>

    <link
      rel='preconnect'
      href='https://fonts.googleapis.com'
    />
    <link
      rel='preconnect'
      href='https://fonts.gstatic.com'
      crossorigin
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Neuton:wght@300;400;700&display=swap'
      rel='stylesheet'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
    <script>
      import 'animate.css'
    </script>
  </head>
  <body class='bg-darkPrimary w-full min-h-screen container mx-auto'>
    <Header />

    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    font-family: 'Neuton', serif;
    color: white;
  }
</style>
